<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ItemTitle">
        <item name="android:textColor">@color/tundora</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style name="ItemSubTitle">
        <item name="android:textColor">@color/tundora</item>
        <item name="android:fontFamily">"sans-serif-thin"</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="ItemPriceTitle">
        <item name="android:textColor">@color/tundora</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style  name="MineCustomTabText"
        parent="TextAppearance.Design.Tab">
        <item name="android:textSize">13sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:singleLine">true</item>
    </style>
    <style  name="SortPopupMenuDescriptionRB">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style  name="SortPopupMenuCancel">
        <item name="android:textColor">@color/spanish_gray</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style  name="SortPopupMenuOk">
        <item name="android:textColor">@color/UFO_green</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style  name="PopupMenuDownloadTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textSize">18sp</item>
    </style>
    <style  name="PopupMenuDownload">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/UFO_green</item>
        <item name="colorPrimaryDark">@color/UFO_green</item>
        <item name="colorAccent">@color/UFO_green</item>
    </style>
    <style  name="CryptoName">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style  name="SettingTitle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">"sans-serif-medium"</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style  name="SettingTextHint">
        <item name="android:textColor">@color/silver_sand</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="CustomTabLayout" parent="Theme.MaterialComponents.Light.Bridge">
    <item name="colorPrimary">@color/white</item>
    <item name="colorPrimaryDark">@color/white</item>
    <item name="colorAccent">@color/white</item>
    <item name="backgroundColor">@color/UFO_green</item>
    <item name="android:textColorPrimary">@color/white</item>
    </style>
    <!-- for text -->
    <style name="CustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>
    <style  name="CryptoActivityTitlePrice">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textSize">36sp</item>
    </style>
    <style  name="CryptoActivityStartEndPrice">
        <item name="android:textColor">@color/old_silver</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style  name="CryptoActivityPointsTime">
        <item name="android:textColor">@color/silver_sand</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style  name="CryptoActivityMarketCap">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style  name="CryptoActivityMarketPrice">
        <item name="android:textColor">@color/UFO_green</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textSize">28sp</item>
    </style>
    <style  name="CryptoActivityMarketPricePercent">
        <item name="android:textColor">@color/UFO_green</item>
        <item name="android:fontFamily">"sans-serif"</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>